<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:ignore="HardcodedText,UnusedAttribute"
	android:orientation="vertical"
	tools:context=".main_homepage.fragments.MyTripsFragment">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="8dp"
		android:layout_marginTop="?actionBarSize"
		android:orientation="horizontal"
		android:weightSum="3" >
		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="center"
			android:padding="4dp"
			android:fontFamily="@font/gotham_book"
			android:background="@drawable/round_rectangle_textview"
			android:text="Today" />
		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:fontFamily="@font/gotham_book"
			android:gravity="center"
			android:padding="4dp"
			android:layout_marginHorizontal="4dp"
			android:background="@drawable/round_rectangle_textview"
			android:text="Yesterday" />
		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:fontFamily="@font/gotham_book"
			android:gravity="center"
			android:padding="4dp"
			android:background="@drawable/round_rectangle_textview"
			android:text="01 Jul to 31 Jul" />
	</LinearLayout>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="4000 Km"
		android:layout_gravity="center"
		android:gravity="center"
		android:padding="8dp"
		android:layout_marginTop="?actionBarSize"
		android:fontFamily="@font/gotham_book" />

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="25 Trips"
		android:layout_gravity="center"
		android:gravity="center"
		android:padding="8dp"
		android:fontFamily="@font/gotham_book" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:weightSum="4" >
		<androidx.recyclerview.widget.RecyclerView
			android:id="@+id/my_trips_recyclerView"
			android:layout_width="match_parent"
			android:padding="8dp"
			android:layout_height="0dp"
			android:layout_weight="3.5"/>

		<Button
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:text="SEND ALERT"
			android:layout_margin="8dp"
			android:background="@drawable/green_button_click"
			android:layout_gravity="bottom"
			android:layout_weight="0.5"
			android:gravity="center"/>
	</LinearLayout>

</LinearLayout>